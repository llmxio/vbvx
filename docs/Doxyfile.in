# Doxyfile for @PROJECT_NAME@
# Generated by CMake configure_file from Doxyfile.in

PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_NUMBER         = "@PROJECT_VERSION@"
PROJECT_BRIEF          = "Header-only C++23 library for safe, zero-copy parsing of packet buffers."
OUTPUT_DIRECTORY       = "@CMAKE_BINARY_DIR@/docs"
CREATE_SUBDIRS         = YES
OUTPUT_LANGUAGE        = English
# Input files and patterns
INPUT                  = "@CMAKE_SOURCE_DIR@"
FILE_PATTERNS          = *.hxx *.h *.cxx *.cpp *.md
RECURSIVE              = YES
EXCLUDE                = @CMAKE_BINARY_DIR@
USE_MDFILE_AS_MAINPAGE = "@CMAKE_SOURCE_DIR@/README.md"

# Extract settings
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = NO
EXTRACT_LOCAL_CLASSES  = YES

# Warnings
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = NO
WARN_NO_PARAMDOC       = NO
QUIET                  = NO

# Output formats
GENERATE_HTML          = YES
HTML_OUTPUT            = html
GENERATE_LATEX         = NO

# Misc
INPUT_ENCODING         = UTF-8
MARKDOWN_SUPPORT       = YES
STRIP_FROM_PATH        = @CMAKE_SOURCE_DIR@

# Treat header-only files as C++
EXTENSION_MAPPING      = hxx=C++ md=Markdown

# Do not show unknown tags as errors
WARN_IF_DOC_ERROR      = NO

# Set source browser if needed
SOURCE_BROWSER         = NO
INLINE_SOURCES         = NO

GENERATE_TAGFILE       = "@CMAKE_BINARY_DIR@/docs/tagfile.tag"
